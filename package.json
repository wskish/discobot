{
	"name": "octobot",
	"version": "0.0.1-alpha9",
	"private": true,
	"scripts": {
		"build": "next build",
		"dev": "concurrently -n next,api,agent -c cyan,green,magenta \"next dev\" \"cd server && go run github.com/air-verse/air@latest\" \"tsx scripts/agent-watcher/index.ts\"",
		"dev:next": "next dev",
		"dev:api": "cd server && go run github.com/air-verse/air@latest",
		"dev:agent": "tsx --watch scripts/agent-watcher/index.ts",
		"dev:tauri": "cross-env NEXT_PUBLIC_TAURI=true next dev --turbopack -p 1420",
		"build:tauri": "cross-env NEXT_PUBLIC_TAURI=true next build",
		"build:server": "node scripts/build-server.mjs",
		"start": "next start",
		"tauri": "tauri",
		"test": "npm run test:unit && npm run test:integration",
		"test:unit": "npm run test:server:unit && npm run test:agent:unit && npm run test:watcher",
		"test:integration": "npm run test:server:integration && npm run test:agent:integration",
		"test:server": "cd server && go test -v ./...",
		"test:server:unit": "cd server && go test -v $(go list ./... | grep -v /integration)",
		"test:server:integration": "cd server && go test -v ./internal/integration/...",
		"test:agent": "cd agent && npm test",
		"test:agent:unit": "cd agent && npm run test:unit",
		"test:agent:integration": "cd agent && npm run test:integration",
		"test:watcher": "node --import tsx --test scripts/agent-watcher/watcher.test.ts",
		"ci": "npm run check:fix && npm run test:unit && npm run build && git diff --exit-code",
		"lint": "biome lint . && npm run lint:go",
		"lint:go": "cd server && go tool golangci-lint run",
		"format": "biome format . --write",
		"check": "biome check . && npm run lint:go && npm run typecheck",
		"check:fix": "biome check . --write && npm run lint:go && npm run typecheck",
		"typecheck": "tsc --noEmit",
		"refresh-models": "./scripts/refresh-models-data.sh",
		"release": "node scripts/release.mjs"
	},
	"dependencies": {
