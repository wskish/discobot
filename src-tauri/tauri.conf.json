{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "discobot",
	"version": "../package.json",
	"identifier": "ai.obot.oct",
	"build": {
		"devUrl": "http://localhost:3000",
		"beforeBuildCommand": "pnpm build:server && pnpm build:vite",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "Discobot",
				"width": 1200,
				"height": 800,
				"decorations": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"externalBin": ["binaries/discobot-server"]
	}
}
